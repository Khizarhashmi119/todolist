<%- include("header") -%>
<div class="box" id="heading">
  <h1> <%= Title %></h1>
</div>
<div class="box">

  <% Todos.forEach(function(todo) { %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%= todo._id %>" onchange="this.form.submit()">
      <p> <%= todo.todo %> </p>
    </div>
    <input type="hidden" name="list" value="<%= Title %>"></input>
  </form>
  <% }); %>
  <form class="item" action="/" method="post">
    <input type="text" name="todo" placeholder="New item" autocomplete="off">
    <button type="submit" name="btn" value="<%= Title %>">+</button>
  </form>
  
</div>
<%- include("footer") -%>
